/* Reset and base styles */
* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

html,
body {
  max-width: 100vw;
  overflow-x: hidden;
}

/* Carbon Design System will handle most styling */
body {
  color: var(--cds-text-primary);
  background: var(--cds-background);
}

/* Custom styles for Cesium integration */
.cesium-container {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

/* Ensure proper layering */
.cesium-widget canvas {
  outline: none;
}

/* Loading animations */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* Custom utilities that work with Carbon */
.full-height {
  height: 100vh;
}

.full-width {
  width: 100vw;
